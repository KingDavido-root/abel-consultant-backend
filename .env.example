# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=YourApp

# JWT Secret (use a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (Update these with your actual email credentials)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_or_password

# Frontend URLs (Update these with your actual frontend URLs)
FRONTEND_URL=http://localhost:3000
